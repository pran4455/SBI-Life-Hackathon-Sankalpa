<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goal GPS - Financial AI Hub</title>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#667eea">
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-color: #48bb78;
            --warning-color: #ed8936;
            --danger-color: #f56565;
            --dark-color: #2d3748;
            --light-bg: #f7fafc;
        }

        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            padding: 1rem 0;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1rem;
        }

        .logo {
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .user-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .welcome-text {
            color: white;
            font-weight: 500;
        }

        .logout-btn {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logout-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
            text-decoration: none;
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .back-btn {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .back-btn:hover {
            color: white;
            text-decoration: none;
        }

        .page-title {
            color: white;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .page-description {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        @media (max-width: 768px) {
            .content-grid {
                grid-template-columns: 1fr;
            }
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .card-header {
            padding: 1.5rem;
            font-weight: bold;
            color: white;
        }

        .card-header.primary {
            background: var(--primary-gradient);
        }

        .card-header.success {
            background: linear-gradient(135deg, var(--success-color) 0%, #38a169 100%);
        }

        .card-body {
            padding: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

        .form-text {
            font-size: 0.85rem;
            color: #718096;
            margin-top: 0.25rem;
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            width: 100%;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 1rem;
        }

        .alert-success {
            background: linear-gradient(135deg, #c6f6d5 0%, #9ae6b4 100%);
            color: #22543d;
        }

        .alert-warning {
            background: linear-gradient(135deg, #feebc8 0%, #fbd38d 100%);
            color: #744210;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fed7d7 0%, #fc8181 100%);
            color: #742a2a;
        }

        .recommendation-content {
            margin-top: 1rem;
        }

        .recommendation-text {
            background: #f7fafc;
            padding: 1.5rem;
            border-radius: 10px;
            border-left: 4px solid var(--primary-color);
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .placeholder-content {
            text-align: center;
            padding: 2rem;
            color: #718096;
        }

        .placeholder-icon {
            font-size: 3rem;
            color: #cbd5e0;
            margin-bottom: 1rem;
        }

        .info-section {
            margin-top: 2rem;
            text-align: left;
        }

        .info-list {
            list-style: none;
            padding: 0;
        }

        .info-list li {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .examples-section {
            margin-top: 3rem;
        }

        .examples-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .examples-header {
            background: var(--primary-gradient);
            color: white;
            padding: 1.5rem;
            font-weight: bold;
        }

        .examples-body {
            padding: 2rem;
        }

        .examples-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .example-goal {
            background: #f7fafc;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .example-goal:hover {
            border-color: var(--primary-color);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .example-goal.border-primary {
            border-color: var(--primary-color);
            background: rgba(102, 126, 234, 0.05);
        }

        .example-goal h6 {
            color: var(--primary-color);
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .example-goal p {
            margin: 0.25rem 0;
            font-size: 0.9rem;
            color: #4a5568;
        }

        .examples-note {
            text-align: center;
            color: #718096;
            font-style: italic;
            margin-top: 1rem;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
            animation: spinner-border 0.75s linear infinite;
        }

        @keyframes spinner-border {
            to {
                transform: rotate(360deg);
            }
        }

        .text-center {
            text-align: center;
        }

        .text-success {
            color: var(--success-color) !important;
        }

        .text-warning {
            color: var(--warning-color) !important;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        .text-primary {
            color: var(--primary-color) !important;
        }

        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .mr-3 {
            margin-right: 1rem;
        }

        .mt-2 {
            margin-top: 0.5rem;
        }

        .mb-0 {
            margin-bottom: 0;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="logo">
                <i class="fas fa-chart-line"></i>
                Financial AI Hub
            </div>
            <div class="user-section">
                <span class="welcome-text">Welcome, <%= username %>!</span>
                <a href="/games" class="logout-btn">
                    <i class="fas fa-gamepad"></i> Games
                </a>
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </header>

    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-compass"></i>Goal GPS
            </h1>
            <p class="page-description">Navigate your financial goals with AI-powered recommendations</p>
        </div>

        <div class="content-grid">
            <div class="card">
                <div class="card-header primary">
                    <h4>
                        <i class="fas fa-target"></i>Set Your Financial Goal
                    </h4>
                </div>
                <div class="card-body">
                    <form id="goalForm">
                        <div class="form-group">
                            <label for="goal" class="form-label">
                                <i class="fas fa-bullseye"></i>What is your financial goal?
                            </label>
                            <input type="text" class="form-control" id="goal" placeholder="e.g., Buy a house, Child's education, Retirement planning" required>
                            <div class="form-text">Be specific about your financial objective</div>
                        </div>

                        <div class="form-group">
                            <label for="duration" class="form-label">
                                <i class="fas fa-calendar-alt"></i>Duration (in months)
                            </label>
                            <input type="number" class="form-control" id="duration" min="1" max="600" placeholder="e.g., 60" required>
                            <div class="form-text">How many months do you have to achieve this goal?</div>
                        </div>

                        <div class="form-group">
                            <label for="risk" class="form-label">
                                <i class="fas fa-chart-bar"></i>Risk Appetite
                            </label>
                            <select class="form-control" id="risk" required>
                                <option value="">Select your risk preference</option>
                                <option value="Low">Low Risk - Conservative approach</option>
                                <option value="Medium">Medium Risk - Balanced approach</option>
                                <option value="High">High Risk - Aggressive approach</option>
                            </select>
                            <div class="form-text">Choose based on your comfort with investment risk</div>
                        </div>

                        <button type="submit" class="btn-primary" id="analyzeBtn">
                            <i class="fas fa-search"></i>Analyze My Goal
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header success">
                    <h4>
                        <i class="fas fa-lightbulb"></i>AI Recommendation
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Loading State -->
                    <div id="loadingDiv" style="display: none;">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <p class="mt-2">Analyzing your goal...</p>
                        </div>
                    </div>

                    <!-- Result State -->
                    <div id="resultDiv" style="display: none;">
                        <div id="statusIndicator" class="alert mb-3">
                            <div class="d-flex align-items-center">
                                <div id="statusIcon" class="mr-3"></div>
                                <div>
                                    <h6 id="statusText" class="mb-0"></h6>
                                </div>
                            </div>
                        </div>
                        <div class="recommendation-content">
                            <h6><i class="fas fa-robot"></i> AI Analysis:</h6>
                            <div id="recommendationText" class="recommendation-text"></div>
                        </div>
                    </div>

                    <!-- Placeholder State -->
                    <div id="placeholderDiv" class="placeholder-content">
                        <div class="placeholder-icon">
                            <i class="fas fa-compass"></i>
                        </div>
                        <p>Enter your financial goal details to get personalized AI recommendations</p>
                        <div class="info-section">
                            <h6><i class="fas fa-info-circle"></i>How it works:</h6>
                            <ul class="info-list">
                                <li><i class="fas fa-check text-success"></i>Enter your specific financial goal</li>
                                <li><i class="fas fa-check text-success"></i>Set your timeline in months</li>
                                <li><i class="fas fa-check text-success"></i>Choose your risk preference</li>
                                <li><i class="fas fa-check text-success"></i>Get AI-powered recommendations</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="examples-section">
            <div class="examples-card">
                <div class="examples-header">
                    <h5>
                        <i class="fas fa-lightbulb"></i>Example Financial Goals
                    </h5>
                </div>
                <div class="examples-body">
                    <div class="examples-grid">
                        <div class="example-goal" data-goal="Buy a house worth 50 lakhs" data-duration="120" data-risk="Medium">
                            <h6><i class="fas fa-home"></i>Home Purchase</h6>
                            <p>Goal: Buy a house worth 50 lakhs</p>
                            <p>Duration: 120 months</p>
                            <p>Risk: Medium</p>
                        </div>
                        <div class="example-goal" data-goal="Child's higher education expenses" data-duration="180" data-risk="Low">
                            <h6><i class="fas fa-graduation-cap"></i>Child's Education</h6>
                            <p>Goal: Child's higher education expenses</p>
                            <p>Duration: 180 months</p>
                            <p>Risk: Low</p>
                        </div>
                        <div class="example-goal" data-goal="Retirement corpus of 2 crores" data-duration="240" data-risk="High">
                            <h6><i class="fas fa-umbrella-beach"></i>Retirement Planning</h6>
                            <p>Goal: Retirement corpus of 2 crores</p>
                            <p>Duration: 240 months</p>
                            <p>Risk: High</p>
                        </div>
                    </div>
                    <p class="examples-note">
                        <i class="fas fa-hand-pointer"></i>Click on any example to auto-fill the form
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Example goal click handlers
        document.querySelectorAll('.example-goal').forEach(example => {
            example.addEventListener('click', function() {
                document.getElementById('goal').value = this.dataset.goal;
                document.getElementById('duration').value = this.dataset.duration;
                document.getElementById('risk').value = this.dataset.risk;
                
                // Highlight the selected example
                document.querySelectorAll('.example-goal').forEach(ex => ex.classList.remove('border-primary'));
                this.classList.add('border-primary');
            });
        });

        // Form submission handler
        document.getElementById('goalForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const goal = document.getElementById('goal').value.trim();
            const duration = document.getElementById('duration').value;
            const risk = document.getElementById('risk').value;
            
            if (!goal || !duration || !risk) {
                alert('Please fill in all fields');
                return;
            }
            
            // Show loading, hide others
            showLoading();
            
            try {
                const response = await fetch('/api/goal-gps', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ goal, duration, risk })
                });
                
                const data = await response.json();
                console.log('Response data:', data); // Debug log
                
                if (response.ok) {
                    displayResult(data);
                } else {
                    throw new Error(data.error || 'Failed to get recommendation');
                }
            } catch (error) {
                console.error('Error:', error);
                displayError(error.message);
            }
        });

        function showLoading() {
            document.getElementById('loadingDiv').style.display = 'block';
            document.getElementById('resultDiv').style.display = 'none';
            document.getElementById('placeholderDiv').style.display = 'none';
            document.getElementById('analyzeBtn').disabled = true;
        }

        function hideLoading() {
            document.getElementById('loadingDiv').style.display = 'none';
            document.getElementById('analyzeBtn').disabled = false;
        }

        function displayResult(data) {
            hideLoading();
            
            console.log('Displaying result:', data); // Debug log
            
            // Handle both 'color' and 'Color' properties for compatibility
            const color = data.color || data.Color;
            const reason = data.reason || data.Reason;
            
            if (!color || !reason) {
                console.error('Missing color or reason in response:', data);
                displayError('Invalid response format from server');
                return;
            }
            
            // Update status indicator
            const statusIndicator = document.getElementById('statusIndicator');
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');
            
            if (color === 'Green') {
                statusIndicator.className = 'alert alert-success mb-3';
                statusIcon.innerHTML = '<i class="fas fa-check-circle fa-2x text-success"></i>';
                statusText.textContent = 'Goal Achievable!';
            } else if (color === 'Red') {
                statusIndicator.className = 'alert alert-danger mb-3';
                statusIcon.innerHTML = '<i class="fas fa-times-circle fa-2x text-danger"></i>';
                statusText.textContent = 'Goal Needs Major Adjustment';
            } else {
                statusIndicator.className = 'alert alert-warning mb-3';
                statusIcon.innerHTML = '<i class="fas fa-exclamation-triangle fa-2x text-warning"></i>';
                statusText.textContent = 'Goal Needs Adjustment';
            }
            
            // Update recommendation text
            document.getElementById('recommendationText').innerHTML = reason.replace(/\n/g, '<br>');
            
            // Show result
            document.getElementById('resultDiv').style.display = 'block';
            document.getElementById('placeholderDiv').style.display = 'none';
        }

        function displayError(message) {
            hideLoading();
            
            const statusIndicator = document.getElementById('statusIndicator');
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');
            
            statusIndicator.className = 'alert alert-danger mb-3';
            statusIcon.innerHTML = '<i class="fas fa-times-circle fa-2x text-danger"></i>';
            statusText.textContent = 'Analysis Failed';
            
            document.getElementById('recommendationText').innerHTML = `Error: ${message}`;
            document.getElementById('resultDiv').style.display = 'block';
            document.getElementById('placeholderDiv').style.display = 'none';
        }

        // Add hover effects to example goals
        document.querySelectorAll('.example-goal').forEach(example => {
            example.addEventListener('mouseenter', function() {
                if (!this.style.backgroundColor || this.style.backgroundColor === '') {
                    this.style.backgroundColor = '#f8f9fa';
                }
            });
            
            example.addEventListener('mouseleave', function() {
                if (!this.classList.contains('border-primary')) {
                    this.style.backgroundColor = '';
                }
            });
        });
    </script>
</body>
</html>
